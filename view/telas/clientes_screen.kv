<ClientesScreen>:
    BoxLayout:
        orientation: 'vertical'
        
        # Cabeçalho
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 60
            padding: [10, 0]
            spacing: 10
            
            Button:
                text: '← Voltar'
                size_hint_x: None
                width: 100
                on_press: root.manager.current = 'dashboard'
            
            Label:
                text: 'CLIENTES'
                font_size: 24
                bold: True
                color: 0.1, 0.1, 0.1, 1
                size_hint_x: 0.6
            
            BoxLayout:
                orientation: 'horizontal'
                size_hint_x: 0.3
                spacing: 10
                
                TextInput:
                    id: busca_input
                    hint_text: 'Buscar cliente...'
                    multiline: False
                    size_hint_x: 0.7
                
                Button:
                    text: 'Buscar'
                    size_hint_x: 0.3
                    on_press: root.buscar_cliente()
        
        # Barra de ferramentas
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 50
            padding: [20, 5]
            spacing: 10
            
            Button:
                text: '+ Novo Cliente'
                background_color: 0, 0.6, 0.3, 1
                color: 1, 1, 1, 1
                on_press: root.abrir_popup_novo_cliente()
            
            Button:
                text: 'Atualizar Lista'
                on_press: root.carregar_clientes()
        
        # Lista de clientes
        ScrollView:
            GridLayout:
                id: lista_clientes
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                spacing: 2
                padding: [10, 10]