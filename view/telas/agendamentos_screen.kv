<AgendamentosScreen>:
    BoxLayout:
        orientation: 'vertical'
        
        # Cabeçalho
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 60
            padding: [10, 0]
            spacing: 10
            
            Button:
                text: '← Voltar'
                size_hint_x: None
                width: 100
                on_press: root.manager.current = 'dashboard'
            
            Label:
                text: 'AGENDAMENTOS'
                font_size: 24
                bold: True
                color: 0.1, 0.1, 0.1, 1
                size_hint_x: 0.6
            
            BoxLayout:
                orientation: 'horizontal'
                size_hint_x: 0.3
                spacing: 10
                
                TextInput:
                    id: data_input
                    hint_text: 'DD/MM/AAAA'
                    multiline: False
                    size_hint_x: 0.6
                
                Button:
                    text: 'Filtrar'
                    size_hint_x: 0.4
                    on_press: root.filtrar_por_data()
        
        # Barra de ferramentas
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 50
            padding: [20, 5]
            spacing: 10
            
            Button:
                text: 'Novo Agendamento'
                background_color: 0, 0.6, 0.3, 1
                color: 1, 1, 1, 1
            
            Button:
                text: 'Hoje'
                on_press: 
                    root.ids.data_input.text = datetime.now().strftime('%d/%m/%Y')
                    root.filtrar_por_data()
        
        # Lista de agendamentos
        ScrollView:
            GridLayout:
                id: lista_agendamentos
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                spacing: 5
                padding: [10, 10]